<div class="col-md-12" id="graph">
    <p id="tweettext"></p>
</div>
<script src="http://mbostock.github.com/d3/d3.v2.js"></script>
<script src="https://d3js.org/d3.v4.min.js"></script>
    <script type="text/javascript">
        $ = jQuery;
        function handleResults(data) {
            $('#tweettext').text(JSON.stringify(data) + ' ' + d3.max(data, function (d) { return d.count;})+"y= ");
            graph(d3, data);

        }


            $.ajax('@Url.Action("timejson", "Graph")', {
                method: 'GET',
                success: handleResults
            });



        // define dimensions of graph
        function graph(d3,data) {
            var w = $("#tweettext").width ; // width
            var h = 400 ; // height

            // create a simple data array that we'll plot with a line (this array represents only the Y values, X will just be the index location)
            //var data = [3, 6, 2, 7, 5, 2, 0, 3, 8, 9, 2, 5, 9, 3, 6, 3, 6, 2, 7, 5, 2, 1, 3, 8, 9, 2, 5, 9, 2, 7];

            // X scale will fit all values from data[] within pixels 0-w
            var x = d3.scaleLinear().domain([0, data.length]).range([0, w]);
            // Y scale will fit values from 0-10 within pixels h-0 (Note the inverted domain for the y-scale: bigger is up!)
            //var y = d3.scale.linear().domain([0, 10]).range([h, 0]);
            // automatically determining max range can work something like this
            var y = d3.time.scale().domain([d3.min(data, function (d) { return d.count; }), d3.max(data, function (d) { return d.count; })]).range([100, w - 100 * 2]);
                //d3.scaleLinear().domain([0, d3.max(data, function (d) { return d.count; })]).range([h, 0]);
            console.log(y);
            // create a line function that can convert data[] into x and y points
            var line = d3.svg.line()
                // assign the X function to plot our line as we wish
                .x(function (d, i) {
                    // verbose logging to show what's actually being done
                    console.log('Plotting X value for data point: ' + d.date + ' using index: ' + i + ' to be at: ' + x(d.date) + ' using our xScale.');
                    // return the X coordinate where we want to plot this datapoint
                    return x(i);
                }
                .y(function (d) {
                    // verbose logging to show what's actually being done
                    console.log('Plotting Y value for data point: ' + d.count + ' to be at: ' + y(d.count) + " using our yScale.");
                    // return the Y coordinate where we want to plot this datapoint
                    return d.count;
                })

            // Add an SVG element with the desired dimensions and margin.
            var graph = d3.select("#graph").append("svg:svg")
                  .attr("width", w)
                  .attr("height", h)
                .append("svg:g")
                  .attr("transform", "translate(" + 0 + "," + 0 + ")");

            var xAxis = d3.svg.axis().scale(x).orient("bottom").ticks(data.count);



            // create yAxis
            //var xAxis = d3.svg.axis().scale(x).tickSize(-h).tickSubdivide(true);
            // Add the x-axis.
            graph.append("svg:g")
                  .attr("class", "x axis")
                  .attr("transform", "translate(0," + h + ")")
                  .call(xAxis);
            var yAxis = d3.svg.axis().scale(y).orient("left").ticks(100);

            // create left yAxis
            //var yAxisLeft = d3.svg.axis().scale(y).ticks(data.count).orient("left");
            // Add the y-axis to the left
            graph.append("svg:g")
                  .attr("class", "y axis")
                  .attr("transform", "translate(-25,0)")
                  .call(yAxis);

            // Add the line by appending an svg:path element with the data line we created above
            // do this AFTER the axes above so that the line is above the tick-lines
            graph.append("svg:path").attr("d", line(data));
        }


    </script>

    

